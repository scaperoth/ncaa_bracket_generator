<% bracket_helper = BracketHelper %>
<h1><%= @tournament.name %> Generated Bracket</h1>
<p>
	Bracket generated using data, with permission, from <a href="http://kenpom.com" target="_blank">kenpom.com</a> and <a href="http://bracketmatrix.com" target="_blank">bracketmatrix.com</a>
</p>

<% bracket_generator = create_bracket(@tournament, @method, true)%>
<%=
 #"params: "+@params.to_s
%>
<%= form_tag("/bracket/comparison/"+@tournament.year, method: "post") do %>
<%= label_tag(:q, "generate using:") %>

<div class="select-wrapper small">
	<%= select_tag("method", options_for_select(
	[
	['Both', "all"],
	['Ken Pom', "kp"],
	['Bracket Matrix', "bmat"]
	], @method
	) ) %>
</div>
<%= submit_tag("generate") %>
<% end %>

<%= bracket_generator[:accuracy]%>
<div class="bracketspacecontainer">
	<div class= "bracketspace">
		<div class="jQBracket lr">
			<div class="bracket" style="height: <%= 8 * 64 %>">
				<%= bracket_generator[:bracket] %>
			</div><!-- end bracket -->
		</div><!-- end jq bracket -->
	</div><!-- end bracketspace -->
</div><!-- end bracketspacecontainer-->

